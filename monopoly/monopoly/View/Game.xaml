                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0"
                       Text="ИГРОК 1"
                       TextColor="#ff008e"
                       FontSize="40"
                       FontFamily="ACaptain"
                       HorizontalOptions="Center"/>
                <Label Grid.Row="0" Grid.Column="0"
                       Text="5000$"
                       TextColor="#ff008e"
                       FontSize="25"
                       FontFamily="ACaptain"
                       Margin="10"
                       HorizontalOptions="Center"
                       VerticalOptions="End"/>

                <Label Grid.Row="0" Grid.Column="1"
                       Text="ИГРОК 1"
                       TextColor="#00ff00"
